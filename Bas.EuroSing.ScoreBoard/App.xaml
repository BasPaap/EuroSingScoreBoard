<Application x:Class="Bas.EuroSing.ScoreBoard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Bas.EuroSing.ScoreBoard.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Bas.EuroSing.ScoreBoard"
             mc:Ignorable="d"
             StartupUri="Views/MainView.xaml">
    <Application.Resources>
        <vm:ViewModelLocator x:Key="Locator" />
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style x:Key="SubWindowStyle" TargetType="UserControl">
            <Setter Property="Margin" Value="10" />            
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />


    </Application.Resources>
</Application>
